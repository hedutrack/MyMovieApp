<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/textTitle"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textSize="32sp"
        android:paddingBottom="20dp"
        android:layout_weight="0.04"
        android:layout_gravity="right"/>

    <ImageView
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTitle"
        android:id="@+id/imageView"
        android:layout_weight="0.31"/>

    <TextView
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:id="@+id/ratingLabel"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textTitle"
        android:layout_weight="0.04"
        android:layout_gravity="right"/>

    <TextView
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:text="textRating"
        android:id="@+id/textRating"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ratingLabel"
        android:layout_gravity="right"
        android:layout_weight="0.04"/>

    <TextView
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/dateLabel"
        android:textStyle="bold"
        android:layout_weight="0.04"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textRating"
        android:layout_gravity="right"/>

    <TextView
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:text="date"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dateLabel"
        android:id="@+id/textReleaseDate"
        android:layout_gravity="right"
        android:layout_weight="0.04"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="plot"
        android:id="@+id/textPlot"
        android:layout_below="@+id/textReleaseDate"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="0.31"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textPlot"
        android:background="@android:color/darker_gray"
        android:id="@+id/view"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Trailer"
        android:id="@+id/btnTrailer"
        android:layout_below="@+id/view"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"/>
</RelativeLayout>